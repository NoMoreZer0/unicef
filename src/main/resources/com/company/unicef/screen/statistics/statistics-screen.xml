<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:dashboard="http://jmix.io/schema/dashboards/ui"
        caption="msg://statisticsScreen.caption">
    <data>
        <collection id="statisticsTableRowDc" class="com.company.unicef.entity.StatisticsTableRow"/>
    </data>
    <layout>
        <vbox>
            <vbox css="padding-left: 100px; background: #E1F0DA; border-radius: 20px; margin-bottom: 20px;">
                <dashboard:dashboard id="studentsStatusDashboard"
                                     code="108"
                                     timerDelay="60"
                                     width="800px" height="350px">
                </dashboard:dashboard>
                <label id="studentsStatusStatisticsLabel" value="msg://studentsStatusStatisticsLabel.value"
                       stylename="h3"
                       css="position: relative; bottom: 50px; left: 120px; font-weight: bold;"/>
            </vbox>
            <vbox css="padding-left: 100px; background: #E1F0DA; border-radius: 20px; margin-bottom: 20px;">
                <dashboard:dashboard id="caseDashboard"
                                     code="110"
                                     timerDelay="60"
                                     width="1000px" height="350px">
                </dashboard:dashboard>
                <label id="caseStatisticsLabel" value="msg://caseStatisticsLabel.value" stylename="h3"
                       css="position: relative; bottom: 50px; left: 210px; font-weight: bold;"/>
            </vbox>
            <vbox css="padding-left: 100px; background: #E1F0DA; border-radius: 20px; margin-bottom: 20px;">
                <dashboard:dashboard id="formDashboard"
                                     code="109"
                                     timerDelay="60"
                                     width="1000px" height="350px">
                </dashboard:dashboard>
                <label id="formStatisticsLabel" value="msg://formStatisticsLabel.value" stylename="h3"
                       css="position: relative; bottom: 50px; left: 240px; font-weight: bold;"/>
            </vbox>
            <vbox css="padding: 30px 30px 30px 100px; background: #E1F0DA; border-radius: 20px; margin-bottom: 20px;">
                <label stylename="h2" id="statisticsTableLabel" value="msg://statisticsTableLabel.value"
                       css="margin-bottom: 10px;"/>
                <hbox css="margin-bottom: 10px;">
                    <dateField id="dateFieldBegin" resolution="DAY" caption="msg://dateFieldBegin.caption"
                               css="margin-right: 10px;"/>
                    <dateField id="dateFieldEnd" resolution="DAY" caption="msg://dateFieldEnd.caption"/>
                </hbox>
                <comboBox id="schoolMaskComboBox"
                          caption="Маска школы"
                          optionsEnum="com.company.unicef.entity.SchoolMask"
                          property="schoolMask"
                          inputPrompt="Select school" pageLength="30" css="margin-bottom: 10px;"/>
                <button id="calc" caption="msg://calc.caption" css="margin-bottom: 10px;"/>
                <table id="statisticsTable"
                       width="1200px"
                       dataContainer="statisticsTableRowDc">
                    <columns>
                        <column id="name" caption="msg://name.caption"/>
                        <column id="count" caption="msg://count.caption"/>
                    </columns>
                </table>
            </vbox>
        </vbox>
    </layout>
</window>