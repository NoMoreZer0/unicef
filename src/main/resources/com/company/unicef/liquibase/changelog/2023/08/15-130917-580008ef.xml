<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <addColumn tableName="STUDENT">
            <column name="ADDRESS_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_STUDENT_ADDRESS" tableName="STUDENT">
            <column name="ADDRESS_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ADDRESS_ID" baseTableName="STUDENT"
                                 constraintName="FK_STUDENT_ON_ADDRESS" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="ADDRESS"/>
    </changeSet>
</databaseChangeLog>