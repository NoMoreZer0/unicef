<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <createTable tableName="MEETING">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_MEETING"/>
            </column>
            <column name="DATE_" type="DATE"/>
            <column name="FIO" type="VARCHAR(255)"/>
            <column name="ORGANIZATION_NAME" type="VARCHAR(255)"/>
            <column name="RELATIVE_" type="VARCHAR(255)"/>
            <column name="CONTACT" type="VARCHAR(255)"/>
            <column name="UUID" type="UUID"/>
            <column name="FIRST_FORM_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_MEETING_FIRST_FORM" tableName="MEETING">
            <column name="FIRST_FORM_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FIRST_FORM_ID" baseTableName="MEETING"
                                 constraintName="FK_MEETING_ON_FIRST_FORM" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="FIRST_FORM"/>
    </changeSet>
    <changeSet id="3" author="unicef">
        <dropColumn columnName="interview_contact" tableName="first_form"/>

        <dropColumn columnName="interview_date" tableName="first_form"/>

        <dropColumn columnName="interview_fio" tableName="first_form"/>

        <dropColumn columnName="interview_org_name" tableName="first_form"/>

        <dropColumn columnName="interview_relative" tableName="first_form"/>
    </changeSet>
</databaseChangeLog>