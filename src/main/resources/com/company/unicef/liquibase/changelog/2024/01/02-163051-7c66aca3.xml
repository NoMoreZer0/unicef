<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <addColumn tableName="SECOND_FORM">
            <column name="CASE_ID_NUM" type="VARCHAR(255)"/>
            <column name="STUDENT_ID" type="UUID"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_SECOND_FORM_STUDENT" tableName="SECOND_FORM">
            <column name="STUDENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="STUDENT_ID" baseTableName="SECOND_FORM"
                                 constraintName="FK_SECOND_FORM_ON_STUDENT" referencedColumnNames="ID"
                                 referencedTableName="STUDENT"/>
    </changeSet>
    <changeSet id="3" author="unicef">
        <dropColumn columnName="child_id_num" tableName="second_form"/>
    </changeSet>
</databaseChangeLog>