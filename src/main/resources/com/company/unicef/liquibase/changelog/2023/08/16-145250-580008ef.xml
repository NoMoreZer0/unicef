<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <createTable tableName="REPRESENTATIVES">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_REPRESENTATIVES"/>
            </column>
            <column name="UUID" type="UUID"/>
            <column name="FIO" type="VARCHAR(255)"/>
            <column name="ORGANIZATION" type="VARCHAR(255)"/>
            <column name="CONTACT_INFO" type="VARCHAR(255)"/>
            <column name="OPEN_CASE_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_REPRESENTATIVES_OPEN_CASE" tableName="REPRESENTATIVES">
            <column name="OPEN_CASE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="OPEN_CASE_ID" baseTableName="REPRESENTATIVES"
                                 constraintName="FK_REPRESENTATIVES_ON_OPEN_CASE" onDelete="SET NULL"
                                 referencedColumnNames="ID" referencedTableName="OPEN_CASE"/>
</changeSet>
</databaseChangeLog>