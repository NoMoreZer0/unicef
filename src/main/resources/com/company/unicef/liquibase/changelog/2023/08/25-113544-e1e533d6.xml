<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <addColumn tableName="PARENT">
            <column name="EVENT_ID" type="UUID"/>
        </addColumn>

<!--        <addNotNullConstraint columnName="EVENT_ID" tableName="PARENT"/>-->
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_PARENT_EVENT" tableName="PARENT">
            <column name="EVENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EVENT_ID" baseTableName="PARENT" constraintName="FK_PARENT_ON_EVENT"
                                 onDelete="SET NULL" referencedColumnNames="ID" referencedTableName="EVENT_TABLE"/>
    </changeSet>
    <changeSet id="3" author="unicef">
        <dropColumn columnName="rating" tableName="event_table"/>
    </changeSet>
</databaseChangeLog>