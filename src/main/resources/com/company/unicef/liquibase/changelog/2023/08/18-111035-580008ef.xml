<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <createTable tableName="NEED_NAMES">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_NEED_NAMES"/>
            </column>
            <column name="NAME" type="CLOB"/>
            <column name="SECOND_FORM_CHECK_BOX_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_NEED_NAMES_SECOND_FORM_CHECK_BOX" tableName="NEED_NAMES">
            <column name="SECOND_FORM_CHECK_BOX_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="SECOND_FORM_CHECK_BOX_ID" baseTableName="NEED_NAMES"
                                 constraintName="FK_NEED_NAMES_ON_SECOND_FORM_CHECK_BOX" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="SECOND_FORM_CHECK_BOX"/>
    </changeSet>
</databaseChangeLog>