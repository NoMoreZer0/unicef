    <changeSet id="4" author="unicef">
        <createIndex indexName="IDX_PARENT_ADDRESS" tableName="PARENT">
            <column name="ADDRESS_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="ADDRESS_ID" baseTableName="PARENT"
                                 constraintName="FK_PARENT_ON_ADDRESS" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="ADDRESS"/>
    </changeSet>
