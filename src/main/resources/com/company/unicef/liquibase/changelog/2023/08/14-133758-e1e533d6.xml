<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <createTable tableName="ADDRESS">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADDRESS"/>
            </column>
            <column name="CITY" type="VARCHAR(255)"/>
            <column name="DISTRICT" type="VARCHAR(255)"/>
            <column name="STREET" type="VARCHAR(255)"/>
            <column name="HOME" type="VARCHAR(255)"/>
            <column name="APARTMENT" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createTable tableName="PARENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PARENT"/>
            </column>
            <column name="FIO" type="VARCHAR(255)"/>
            <column name="FULL_AGE" type="INT"/>
            <column name="FAMILY_STATUS" type="INT"/>
            <column name="ADDRESS_ID" type="UUID"/>
            <column name="STUDENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
