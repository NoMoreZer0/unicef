<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <createTable tableName="RELATIVE_">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RELATIVE_"/>
            </column>
            <column name="UUID" type="UUID"/>
            <column name="FIO" type="VARCHAR(255)"/>
            <column name="AGE" type="INT"/>
            <column name="RELATION_DEGREE" type="VARCHAR(255)"/>
            <column name="WORK_PLACE" type="VARCHAR(255)"/>
            <column name="STUDENT_ID" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="unicef">
        <createIndex indexName="IDX_RELATIVE__STUDENT" tableName="RELATIVE_">
            <column name="STUDENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="STUDENT_ID" baseTableName="RELATIVE_"
                                 constraintName="FK_RELATIVE__ON_STUDENT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="STUDENT"/>
    </changeSet>
</databaseChangeLog>