<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <dropForeignKeyConstraint baseTableName="OPEN_CASE" constraintName="FK_OPEN_CASE_ON_STUDENT"/>
    </changeSet>
    <changeSet id="2" author="unicef">
        <dropForeignKeyConstraint baseTableName="REPRESENTATIVES" constraintName="FK_REPRESENTATIVES_ON_OPEN_CASE"/>
    </changeSet>
    <changeSet id="3" author="unicef">
        <dropForeignKeyConstraint baseTableName="RESPONSIBLE_EMPLOYEE"
                                  constraintName="FK_RESPONSIBLE_EMPLOYEE_ON_EMPLOYEE"/>
    </changeSet>
    <changeSet id="4" author="unicef">
        <dropForeignKeyConstraint baseTableName="RESPONSIBLE_EMPLOYEE"
                                  constraintName="FK_RESPONSIBLE_EMPLOYEE_ON_OPEN_CASE"/>
    </changeSet>
    <changeSet id="5" author="unicef">
        <createTable tableName="EVENT_DATE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EVENT_DATE"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="EVENT_DATE" type="DATETIME"/>
            <column name="EVENT_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="6" author="unicef">
        <createTable tableName="EVENT_USER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_EVENT_USER"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="DATETIME"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="DATETIME"/>
            <column name="EVENT_ID" type="UUID"/>
            <column name="USER_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="7" author="unicef">
        <addColumn tableName="PIVOT_TABLE_CHECK_BOXES">
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="8" author="unicef">
        <addColumn tableName="PARENT">
            <column name="EMAIL" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="9" author="unicef">
        <createIndex indexName="IDX_EVENT_DATE_EVENT" tableName="EVENT_DATE">
            <column name="EVENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EVENT_ID" baseTableName="EVENT_DATE"
                                 constraintName="FK_EVENT_DATE_ON_EVENT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="EVENT_TABLE"/>
    </changeSet>
    <changeSet id="10" author="unicef">
        <createIndex indexName="IDX_EVENT_USER_EVENT" tableName="EVENT_USER">
            <column name="EVENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EVENT_ID" baseTableName="EVENT_USER"
                                 constraintName="FK_EVENT_USER_ON_EVENT" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="EVENT_TABLE"/>
    </changeSet>
    <changeSet id="11" author="unicef">
        <createIndex indexName="IDX_EVENT_USER_USER" tableName="EVENT_USER">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="EVENT_USER"
                                 constraintName="FK_EVENT_USER_ON_USER" onDelete="CASCADE" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="12" author="unicef">
        <dropColumn columnName="event_id" tableName="user_"/>
    </changeSet>
    <changeSet id="13" author="unicef">
        <addForeignKeyConstraint baseColumnNames="STUDENT_ID" baseTableName="OPEN_CASE"
                                 constraintName="FK_OPEN_CASE_ON_STUDENT" referencedColumnNames="ID"
                                 referencedTableName="STUDENT"/>
    </changeSet>
    <changeSet id="14" author="unicef">
        <addForeignKeyConstraint baseColumnNames="OPEN_CASE_ID" baseTableName="REPRESENTATIVES"
                                 constraintName="FK_REPRESENTATIVES_ON_OPEN_CASE" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="OPEN_CASE"/>
    </changeSet>
    <changeSet id="15" author="unicef">
        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_ID" baseTableName="RESPONSIBLE_EMPLOYEE"
                                 constraintName="FK_RESPONSIBLE_EMPLOYEE_ON_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
    <changeSet id="16" author="unicef">
        <addForeignKeyConstraint baseColumnNames="OPEN_CASE_ID" baseTableName="RESPONSIBLE_EMPLOYEE"
                                 constraintName="FK_RESPONSIBLE_EMPLOYEE_ON_OPEN_CASE" onDelete="CASCADE"
                                 referencedColumnNames="ID" referencedTableName="OPEN_CASE"/>
    </changeSet>
    <changeSet id="17" author="unicef">
        <dropNotNullConstraint columnDataType="uuid" columnName="OPEN_CASE_ID" tableName="REPRESENTATIVES"/>
    </changeSet>
    <changeSet id="18" author="unicef">
        <dropNotNullConstraint columnDataType="uuid" columnName="OPEN_CASE_ID" tableName="SECOND_FORM_CHECK_BOX"/>
    </changeSet>
</databaseChangeLog>