<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.11.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="unicef">
        <createTable tableName="RESPONSIBLE_EMPLOYEE">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_RESPONSIBLE_EMPLOYEE"/>
            </column>
            <column name="UUID" type="UUID"/>
            <column name="INVOLVEMENT" type="VARCHAR(255)"/>
            <column name="OPEN_CASE_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="unicef">
        <addColumn tableName="USER_">
            <column name="RESPONSIBLE_EMPLOYEE_ID" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="3" author="unicef">
        <createIndex indexName="IDX_RESPONSIBLE_EMPLOYEE_OPEN_CASE" tableName="RESPONSIBLE_EMPLOYEE">
            <column name="OPEN_CASE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="OPEN_CASE_ID" baseTableName="RESPONSIBLE_EMPLOYEE"
                                 constraintName="FK_RESPONSIBLE_EMPLOYEE_ON_OPEN_CASE" referencedColumnNames="ID"
                                 referencedTableName="OPEN_CASE"/>
    </changeSet>
    <changeSet id="4" author="unicef">
        <createIndex indexName="IDX_USER__RESPONSIBLE_EMPLOYEE" tableName="USER_">
            <column name="RESPONSIBLE_EMPLOYEE_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="RESPONSIBLE_EMPLOYEE_ID" baseTableName="USER_"
                                 constraintName="FK_USER__ON_RESPONSIBLE_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="RESPONSIBLE_EMPLOYEE"/>
    </changeSet>
</databaseChangeLog>